<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.karabay.dao.AccountDAO">

	<!-- BaseResultMap -->
	<resultMap id="BaseResultMap" type="top.karabay.model.Account">
		<id column="ID" property="id" jdbcType="INTEGER" />
		<result column="username" property="username" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
		<result column="balance" property="balance" jdbcType="INTEGER" />
	</resultMap>

	<!-- Base_Column_List -->
	<sql id="Base_Column_List">
		ID, username, password, balance
	</sql>

	<!-- selectByAccount -->
	<select id="selectByAccount" parameterType="top.karabay.model.Account"
		resultType="java.lang.Integer">
		select balance
		from account
		where username =
		#{username,jdbcType=VARCHAR}
		and password =
		#{password,jdbcType=VARCHAR}
	</select>

	<!-- updateByAccount -->
	<select id="updateByAccount" parameterType="top.karabay.model.Account"
		resultType="java.lang.Integer">
		update account
		set balance = #{balance,jdbcType=INTEGER}
		where username =
		#{username,jdbcType=VARCHAR}
		and password =
		#{password,jdbcType=VARCHAR}
	</select>
</mapper>